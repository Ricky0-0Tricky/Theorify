<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_background"
    android:padding="16dp"
    tools:context=".ui.activity.PauseActivity">
    <!-- TableLayout  e TableRow https://abhiandroid.com/ui/tablelayout#gsc.tab=0 -->
    <!--
    https://developer.android.com/guide/fragments/fragmentmanager?hl=pt-br#multiple-back-stacks
    https://doctrino.ipt.pt/pluginfile.php/168768/mod_resource/content/1/4.%20Fragmentos.pdf -->

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nota"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:text="@string/pausas"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:gravity="center"
                android:layout_gravity="center"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pausa_semibreve"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/rectangle"
                android:contentDescription="@string/pausa_semibreve"
                android:padding="5dp"
                android:src="@drawable/pausa_semibreve" />

            <TextView
                android:id="@+id/pausa_semibreveDescription"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle"
                android:padding="2dp"
                android:text="@string/conceito_pausa_semibreve"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/minima"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/rectangle"
                android:contentDescription="@string/pausa_minima"
                android:padding="5dp"
                android:src="@drawable/pausa_minima" />

            <TextView
                android:id="@+id/pausa_minimaDescription"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle"
                android:padding="2dp"
                android:text="@string/conceito_pausa_minima"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pausa_seminima"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/rectangle"
                android:contentDescription="@string/pausa_seminima"
                android:padding="5dp"
                android:src="@drawable/pausa_seminima" />

            <TextView
                android:id="@+id/pausa_seminimaDescription"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle"
                android:padding="2dp"
                android:text="@string/conceito_pausa_seminima"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pausa_colcheia"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/rectangle"
                android:contentDescription="@string/pausa_colcheia"
                android:padding="15dp"
                android:src="@drawable/pausa_colcheia" />

            <TextView
                android:id="@+id/pausa_colcheiaDescription"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle"
                android:padding="2dp"
                android:text="@string/conceito_pausa_colcheia"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pausa_semicolcheia"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/rectangle"
                android:contentDescription="@string/pausa_semicolcheia"
                android:padding="5dp"
                android:src="@drawable/pausa_semicolcheia" />

            <TextView
                android:id="@+id/pausa_semicolcheiaDescription"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle"
                android:padding="2dp"
                android:text="@string/conceito_pausa_semicolcheia"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pausa_fusa"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/rectangle"
                android:contentDescription="@string/pausa_fusa"
                android:padding="5dp"
                android:src="@drawable/pausa_fusa" />

            <TextView
                android:id="@+id/pausa_fusaDescription"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rectangle"
                android:padding="2dp"
                android:text="@string/conceito_pausa_fusa"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pausa_semifusa"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/rectangle"
                android:contentDescription="@string/pausa_semifusa"
                android:padding="5dp"
                android:src="@drawable/pausa_semifusa" />

            <TextView
                android:id="@+id/pausa_semifusaDescription"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle"
                android:padding="2dp"
                android:text="@string/conceito_pausa_semifusa"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </TableRow>

        <LinearLayout
            android:id="@+id/botÃµes_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80px"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/note_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:contentDescription="@string/note_button"
                android:src="@drawable/seminima_button"
                />

            <ImageButton
                android:id="@+id/pausa_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:contentDescription="@string/pausa_button"
                android:src="@drawable/pausa_seminima_button"
                />

            <ImageButton
                android:id="@+id/instrumento_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:contentDescription="@string/instrumento_button"
                android:src="@drawable/acousticguitar_button"
                />

            <ImageButton
                android:id="@+id/home_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:contentDescription="@string/home_button"
                android:src="@drawable/home_button"
                />

            <ImageButton
                android:id="@+id/clave_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:contentDescription="@string/clave_button"
                android:src="@drawable/clave_de_sol_button"
                />

            <ImageButton
                android:id="@+id/tools_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:contentDescription="@string/tools_button"
                android:src="@drawable/tools_button"
                />

            <ImageButton
                android:id="@+id/profile_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:contentDescription="@string/profile_button"
                android:src="@drawable/profile_button"
                />

        </LinearLayout>
    </TableLayout>

</ScrollView>

