<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_background"
    android:padding="16dp"
    tools:context=".ui.activity.RegisterActivity">

    <LinearLayout
        android:id="@+id/titleTools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/ferramentas"
            android:textSize="25sp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/DV_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTools"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corner"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/voicedetection"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_corner"
            android:contentDescription="@string/voicedetection"
            android:padding="5dp"
            android:src="@drawable/voicedetection" />

        <TextView
            android:id="@+id/voicedetectionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:text="@string/voicedetection_Name"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/NE_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DV_Layout"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corner"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/noteExplorer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_corner"
            android:contentDescription="@string/noteexplorer"
            android:padding="5dp"
            android:src="@drawable/noteexplorer" />

        <TextView
            android:id="@+id/noteexplorerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="@string/exploradornota_Name"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/SE_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NE_Layout"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corner"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/scaleExplorer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_corner"
            android:contentDescription="@string/scaleexplorer"
            android:padding="5dp"
            android:src="@drawable/scaleexplorer" />

        <TextView
            android:id="@+id/scaleexplorerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="@string/scaleexplorer_Name"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/CE_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SE_Layout"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corner"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chordExplorer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_corner"
            android:contentDescription="@string/chordexplorer"
            android:padding="5dp"
            android:src="@drawable/chordexplorer" />

        <TextView
            android:id="@+id/chordexplorerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/chordexplorer_Name"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/COF_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CE_Layout"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corner"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/CircleofFifths"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_corner"
            android:contentDescription="@string/circleoffifths"
            android:padding="5dp"
            android:src="@drawable/circleoffifths" />

        <TextView
            android:id="@+id/circleoffifthsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:text="@string/circleoffifths_Name"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </LinearLayout>
</RelativeLayout>